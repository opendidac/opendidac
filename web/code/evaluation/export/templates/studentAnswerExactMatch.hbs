<div style="display:flex;flex-direction:column;gap:15px;">
  {{> studentAnswerHeader studentAnswer}}
  <div>
    {{#each question.exactMatch.fields}}
      <div style="margin-bottom: 20px; padding-left: 10px; border-radius: 4px; border-left: 4px solid #e0e0e0;">
        <div style="margin-bottom: 10px;">
          <p>{{this.statement}}</p>
        </div>

        <div>
          <i>Student Answer</i>
          {{#if (isExactMatchFieldCorrect this.id ../question ../studentAnswer.exactMatch.fields)}}
            <div style="margin-top: 5px; background-color: #e8f5e8; padding: 8px">
              {{exactMatchFieldAnswer this.id ../studentAnswer.exactMatch.fields}}
              <strong style="color: #4caf50; font-weight: bold; margin-left: 10px;">(Matches Regex)</strong>
            </div>
          {{else}}
            <div style="margin-top: 5px; background-color: #ffebee; padding: 8px">
              {{exactMatchFieldAnswer this.id ../studentAnswer.exactMatch.fields}}
              <strong style="color: #f44336; font-weight: bold; margin-left: 10px;">(Does not match Regex)</strong>
            </div>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
</div>